# ==========================================
# ACTITUD - ENVIRONMENT VARIABLES
# ==========================================

# SMTP Email Configuration
# ==========================================
# These settings are required for the contact form to work
# Configure with your domain's SMTP server details

# SMTP Server Host (e.g., smtp.gmail.com, smtp.office365.com, mail.yourdomain.com)
SMTP_HOST=smtp.gmail.com

# SMTP Server Port (587 for TLS, 465 for SSL, 25 for non-secure)
SMTP_PORT=587

# Use SSL/TLS (true for port 465, false for port 587)
SMTP_SECURE=false

# SMTP Authentication Username (usually your email address)
SMTP_USER=your-email@yourdomain.com

# SMTP Authentication Password or App Password
SMTP_PASS=your-password-here

# Email Address to Send FROM
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Name to Display in "From" field
SMTP_FROM_NAME=Actitud - Edificio Corporativo

# Email Address to Receive Contact Form Submissions
SMTP_TO_EMAIL=info@yourdomain.com


